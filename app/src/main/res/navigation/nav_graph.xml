<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_grapg"
    app:startDestination="@id/eventListFragment">
    <fragment
        android:id="@+id/eventListFragment"
        android:name="com.example.hms_projekit.view.home.EventListFragment"
        android:label="EventListFragment" >
        <action
            android:id="@+id/action_eventListFragment_to_wikipediaTitleListFragment"
            app:destination="@id/wikipediaTitleListFragment" />
    </fragment>
    <fragment
        android:id="@+id/wikipediaTitleListFragment"
        android:name="com.example.hms_projekit.view.wikilist.WikipediaTitleListFragment"
        android:label="WikipediaTitleListFragment" >
        <argument
            android:name="wikiItem"
            app:argType="com.example.hms_projekit.model.WikipediaEntry[]" />
        <action
            android:id="@+id/action_wikipediaTitleListFragment_to_wikiPageFragment"
            app:destination="@id/wikiPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/wikiPageFragment"
        android:name="com.example.hms_projekit.view.description.WikiPageFragment"
        android:label="WikiPageFragment" >
        <argument
            android:name="wikipediaURL"
            app:argType="string" />
    </fragment>
</navigation>